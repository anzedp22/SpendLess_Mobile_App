        android:layout_height="50dp"
        android:background="@drawable/vnosno_polje"
        android:layout_centerHorizontal="true"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:ems="10"
        android:drawableStart="@drawable/custom_datum_icon"
